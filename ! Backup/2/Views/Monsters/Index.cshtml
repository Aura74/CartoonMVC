@*@model IEnumerable<CartoonMVC.Models.Monster>*@
@model CartoonMVC.Models.MonsterElementViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Lista över alla monster</h1>

<div>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</div>

<form asp-controller="Monsters" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="SearchString"/>
        <input class="btn btn-primary" type="submit" value="Filter"/>
        
        <select asp-for="MonsterElement" asp-items="Model.Elements">
            <option value="">Alla Element</option>
        </select>
    </p>
</form>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Monsters[0].ImageUrl)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Monsters[0].Name)
        </th>
        @*            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].Age)
                </th>*@
        @*            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].IQ)
                </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Monsters[0].SeenLastTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monsters[0].Element)
        </th>
        @*            <th>
                @Html.DisplayNameFor(model => model.Warning)
                </th>
                <th>
                @Html.DisplayNameFor(model => model.Weaknesses)
                </th>*@
        @*            <th>
                @Html.DisplayNameFor(model => model.Strength)
                </th>
                <th>
                @Html.DisplayNameFor(model => model.Speed)
                </th>
                <th>
                @Html.DisplayNameFor(model => model.Naughtiness)
                </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Monsters[0].DegreeOfDanger)
        </th>
        @*            <th>
                @Html.DisplayNameFor(model => model.Information)
                </th>*@

        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Monsters)
        {
            <tr>
                <td>
                    @*@Html.DisplayFor(modelItem => item.ImageUrl)*@

                    <img class="monsterImgTumbNail" src="@Html.DisplayFor(modelItem => item.ImageUrl)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                @*            <td>
                    @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.IQ)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.SeenLastTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Element)
                </td>
                @*            <td>
                    @Html.DisplayFor(modelItem => item.Warning)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Weaknesses)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Strength)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Speed)
                    </td>*@
                @*            <td>
                    @Html.DisplayFor(modelItem => item.Naughtiness)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.DegreeOfDanger)
                </td>

                @*            <td>
                    @Html.DisplayFor(modelItem => item.Information)
                    </td>*@
              

                <td>
                    
                    <div class="btn-group" role="group" aria-label="Knappar">
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                    

                </td>

            </tr>
        }

    </tbody>
</table>
