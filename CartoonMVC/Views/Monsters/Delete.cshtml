@model CartoonMVC.Models.Monster

@{
    ViewData["Title"] = "Ta Bort";
}
<h1 class="monsterFont">@Html.DisplayFor(model => model.Name)</h1>
<h3 class="monsterFont">- Vill du verkligen ta bort @Html.DisplayFor(model => model.Name)</h3>
<hr />
<div>
    <dd class="col-sm-10">
        <div class="flex-shrink-0 mindre">
            <img class="img-thumbnail" src="@Html.DisplayFor(model => model.ImageUrl)" />
        </div>
    </dd>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="❌ Ja för fan - Ta bort skiten❌" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-success">❕ Nej aldrig - Jag vill behålla mitt monster ❕</a>
    </form>
</div>
