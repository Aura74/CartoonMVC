@model CartoonMVC.Models.Monster

@{
    ViewData["Title"] = "Detaljer";
}

<div class="container">

    <div class="d-flex align-items-center">

        <div class="flex-shrink-0 mindre">
            <img class="img-thumbnail" src="@Html.DisplayFor(model => model.ImageUrl)" />
        </div>

        <div class="flex-grow-1 ms-3">
            <h1 class="monsterFont">
                @Html.DisplayFor(model => model.Name)                  
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Ändra</a>
                <a asp-action="Index" class="btn btn-success"> Tillbaka</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">❌ Ta bort ❌</a>
            </h1>
            <hr />
            <p>
                @Html.DisplayFor(model => model.Name) sågs senast @Html.DisplayFor(model => model.SeenLastTime), @Html.DisplayFor(model => model.Information)
            </p>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>

                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Age) år
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Element)
                </dt>

                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Element)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Warning)
                </dt>

                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Warning)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Weaknesses)
                </dt>

                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Weaknesses)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.IQ)
                </dt>

                <dd class="col-sm-9">
                    <div class="progress">
                        <div class="progress-bar bg-secondary progress-bar-striped progress-bar-animated" role="progressbar" style="width: @Html.DisplayFor(model => model.IQ)%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"> @Html.DisplayFor(model => model.IQ)</div>
                    </div>
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Strength)
                </dt>
                <dd class="col-sm-9">
                    <div class="progress">
                        <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" role="progressbar" style="width: @Html.DisplayFor(model => model.Strength)%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@Html.DisplayFor(model => model.Strength)</div>
                    </div>
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Speed)
                </dt>

                <dd class="col-sm-9">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-warning progress-bar-animated" role="progressbar" style="width: @Html.DisplayFor(model => model.Speed)%" aria-valuemin="0" aria-valuemax="10">@Html.DisplayFor(model => model.Speed)</div>
                    </div>
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Naughtiness)
                </dt>
                <dd class="col-sm-9">
                    <div class="progress">
                        <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated" role="progressbar" style="width: @Html.DisplayFor(model => model.Naughtiness)%" aria-valuemin="0" aria-valuemax="100">@Html.DisplayFor(model => model.Naughtiness)</div>
                    </div>
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DegreeOfDanger)
                </dt>
                <dd class="col-sm-9">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-info progress-bar-animated" role="progressbar" style="width: @Html.DisplayFor(model => model.DegreeOfDanger)%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">@Html.DisplayFor(model => model.DegreeOfDanger)</div>
                    </div>
                </dd>
            </dl>
        </div>
    </div>
</div>
<hr />