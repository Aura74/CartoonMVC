@model CartoonMVC.Models.MonsterElementViewModel

@{
    ViewData["Title"] = "Listan";
}

<h1 class="monsterFont">monster-sök</h1>
<hr />

<div class="search-box col-md-5 btn-group">
    <form action="">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <select asp-for="MonsterElement" asp-items="Model.Elements" class="btn btn-light dropdown-toggle form-control borderAll blackColor">
                    <option value="">Alla Element</option>
                </select>
            </div>
            <input type="text" name="SearchString" class="form-control sokRutan" />
            <div class="input-group-append">
                <input class="btn btn-success rightSokButton" type="submit" value="Sök" />
            </div>
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].ImageUrl)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].SeenLastTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].Element)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Monsters[0].DegreeOfDanger)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Monsters)
        {
            <tr>
                <td>
                    <img class="monsterImgTumbNail" src="@Html.DisplayFor(modelItem => item.ImageUrl)" />
                </td>
                <td class="forNamnIndex">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td class="sawLastIndex">
                    @Html.DisplayFor(modelItem => item.SeenLastTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Element)
                </td>

                <td>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-danger progress-bar-animated forNamnIndex" role="progressbar" style="width: @Html.DisplayFor(modelItem => item.DegreeOfDanger)%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">@Html.DisplayFor(modelItem => item.DegreeOfDanger)</div>
                    </div>
                </td>

                <td>
                    <div class="btn-group" role="group" aria-label="Knappar">
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete ❌</a>
                    </div>
                </td>
            </tr>
        }
</tbody>
</table>

<div>
    <a class="btn btn-success" asp-action="Create">😈 Skapa nytt monster 😈</a>
</div>